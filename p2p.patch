From d9be4cc59e063686ab19b88f5824e7a3a5ad1a8f Mon Sep 17 00:00:00 2001
From: PixelOverkill <phantomcommunityde@gmail.com>
Date: Sat, 18 Oct 2025 01:38:25 +0200
Subject: [PATCH] Style: Bewertungs-Buttons farblich angepasst, nur noch Emoji

---
 css/lobby.css | 37 +++++++++++++++++++++++++++++++++++++
 lobby.html    |  4 ++--
 2 files changed, 39 insertions(+), 2 deletions(-)

diff --git a/css/lobby.css b/css/lobby.css
index 71da13d..9482bf6 100644
--- a/css/lobby.css
+++ b/css/lobby.css
@@ -904,3 +904,40 @@ body.bg-waves {
     height: 85px;
   }
 }
+
+/* Bewertungs-Buttons (oben rechts, Host) */
+#host-eval-btns {
+  display: flex;
+  gap: 18px;
+}
+.eval-btn {
+  width: 56px;
+  height: 56px;
+  border-radius: 50%;
+  border: none;
+  font-size: 2.1rem;
+  font-weight: bold;
+  display: flex;
+  align-items: center;
+  justify-content: center;
+  box-shadow: 0 4px 18px rgba(0,0,0,0.18);
+  cursor: pointer;
+  transition: transform 0.12s, box-shadow 0.18s;
+  outline: none;
+  margin: 0;
+  padding: 0;
+}
+.eval-btn-correct {
+  background: linear-gradient(135deg, #22c55e 80%, #16a34a 100%);
+  color: #fff;
+  box-shadow: 0 0 0 2px #22c55e, 0 4px 18px rgba(34,197,94,0.18);
+}
+.eval-btn-wrong {
+  background: linear-gradient(135deg, #ef4444 80%, #b91c1c 100%);
+  color: #fff;
+  box-shadow: 0 0 0 2px #ef4444, 0 4px 18px rgba(239,68,68,0.18);
+}
+.eval-btn:hover {
+  transform: scale(1.08);
+  box-shadow: 0 0 0 4px #fff, 0 8px 24px rgba(0,0,0,0.22);
+}
diff --git a/lobby.html b/lobby.html
index 18e17e2..6a467bd 100644
--- a/lobby.html
+++ b/lobby.html
@@ -50,8 +50,8 @@
   </button>
   <!-- Host Bewertungs-Buttons -->
   <div id="host-eval-btns" style="display:none; position:absolute; top:20px; right:120px; z-index:10;">
-    <button id="btn-correct" class="eval-btn eval-btn-correct" title="Richtig">✔️ Richtig</button>
-    <button id="btn-wrong" class="eval-btn eval-btn-wrong" title="Falsch">❌ Falsch</button>
+    <button id="btn-correct" class="eval-btn eval-btn-correct" title="Richtig">✔️</button>
+    <button id="btn-wrong" class="eval-btn eval-btn-wrong" title="Falsch">❌</button>
   </div>
 
   <!-- Main Content -->
